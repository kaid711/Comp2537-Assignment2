<li class="list-group-item d-flex justify-content-between align-items-center">
  <div>
    <strong><%= user.name %></strong> (<%= user.email %>) - <%= user.user_type %>
  </div>
  <div>
    <% if (user.user_type === 'user') { %>
      <a href="/promote/<%= user._id %>" class="btn btn-success btn-sm">Promote to Admin</a>
    <% } else { %>
      <a href="/demote/<%= user._id %>" class="btn btn-warning btn-sm">Demote to User</a>
    <% } %>
  </div>
</li>
